<h1>Welcome</h1>
<h3>My Projects:</h3>
<% @projects.each do |project| %>
  <div class="row">
    <div class="col sm-4">
      <div class="card">
        <div class="card-block">
        <%= image_tag(project.image) %>
        <h3>Title: <%= link_to project.name, project_path(project) %></h3>
        </div>
      </div>
    </div>
  </div><br>
<% end %>

